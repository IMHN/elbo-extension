{
  "manifest_version": 2,

  "name": "elbo.in URL Shortener",
  "description": "Shorten, customize and get statistics for your links with the elbo.in URL shortener.",
  "version": "1.0.1",

  "browser_action": {
    "default_icon": "img/32.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "img/128.png",
    "32": "img/32.png",
    "64": "img/64.png"
  },

  "permissions": [
    "activeTab",
    "https://elbo.in/"
  ]
}
